{
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "ignore": [
        "**/node_modules/**",
        "**/.turbo/**",
        "**/dist/**",
        "**/target/**",
        "**/out-tsc/**",
        "**/generated/**",
        "**/*.tsbuildinfo",
        "**/*.log",
        "**/*.node"
    ],
    "ignoreIssues": {
        "examples/*/src/app.tsx": ["exports", "duplicates"],
        "packages/cli/src/create.ts": ["exports"],
        "packages/cli/src/dev-server.tsx": ["exports"],
        "packages/cli/src/refresh-runtime.ts": ["exports"]
    },
    "workspaces": {
        "packages/*": {
            "project": ["bin/**/*", "src/**/*", "scripts/**/*", "tests/**/*", "vitest.config.ts"],
            "entry": ["src/index.ts", "vitest.config.ts", "tests/**/*.test.ts", "tests/**/*.test.tsx"]
        },
        "examples/*": {
            "project": ["src/**/*", "scripts/**/*", "tests/**/*", "vitest.config.ts"],
            "entry": [
                "src/app.tsx",
                "src/dev.tsx",
                "src/index.tsx",
                "tests/**/*.test.ts",
                "tests/**/*.test.tsx",
                "src/gtkx-env.d.ts",
                "vitest.config.ts"
            ],
            "ignoreDependencies": ["vite"]
        },
        "packages/ffi": {
            "entry": ["src/index.ts", "src/*/index.ts", "src/generated/*/index.ts", "vitest.config.ts"]
        },
        "packages/cli": {
            "entry": ["src/index.ts", "src/global.d.ts", "src/cli.tsx"],
            "ignore": ["bin/gtkx.js"],
            "ignoreDependencies": ["@gtkx/testing"]
        },
        "packages/mcp": {
            "entry": ["src/index.ts", "src/cli.ts"],
            "ignore": ["bin/gtkx-mcp.js"]
        },
        "packages/codegen": {
            "entry": ["src/index.ts", "src/cli.ts"],
            "ignore": ["bin/gtkx-codegen.js"]
        },
        "packages/native": {
            "entry": ["index.ts", "types.ts", "vitest.config.ts"],
            "ignoreDependencies": ["@neon-rs/cli"]
        },
        "packages/vitest": {
            "entry": ["src/index.ts", "src/setup.ts"]
        },
        "website": {
            "docusaurus": true,
            "ignore": ["build/**", ".docusaurus/**", "docs/api/**", "sidebars.ts"],
            "ignoreDependencies": ["typedoc", "@docusaurus/*", "@theme/*"]
        }
    }
}
