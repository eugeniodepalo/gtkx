{
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "ignoreIssues": {
        "**/src/generated/**": ["enumMembers"],
        "examples/*/src/app.tsx": ["exports", "duplicates"],
        "packages/cli/src/create.ts": ["exports", "types"],
        "packages/cli/src/dev-server.tsx": ["exports", "types"],
        "packages/ffi/src/codegen/**": ["types"],
        "packages/react/src/codegen/**": ["types"]
    },
    "workspaces": {
        "packages/gir": {
            "entry": [],
            "project": ["src/**/*", "tests/**/*"]
        },
        "packages/native": {
            "entry": [],
            "project": ["src/**/*", "tests/**/*"]
        },
        "examples/flatpak": {
            "project": ["src/**/*", "scripts/**/*"],
            "ignoreDependencies": ["postject"],
            "ignoreBinaries": ["flatpak-builder"]
        },
        "website": {
            "docusaurus": true,
            "ignore": ["build/**", ".docusaurus/**", "docs/api/**"],
            "ignoreDependencies": ["typedoc", "@docusaurus/*", "@theme/*"]
        },
        "packages/*": {
            "project": ["src/**/*", "tests/**/*"]
        },
        "examples/*": {
            "project": ["src/**/*", "tests/**/*"],
            "entry": ["src/app.tsx", "src/index.tsx"]
        },
        "packages/ffi": {
            "project": ["src/**/*", "tests/**/*", "scripts/**/*"],
            "entry": ["src/generated/*/index.ts", "src/index.ts", "src/*/index.ts", "scripts/codegen.ts"]
        },
        "packages/react": {
            "project": ["src/**/*", "tests/**/*", "scripts/**/*"],
            "entry": ["src/index.ts", "scripts/codegen.ts"]
        }
    }
}
