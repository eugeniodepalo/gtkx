{
    "$schema": "https://turborepo.com/schema.json",
    "globalDependencies": ["tsconfig.base.json", "biome.json"],
    "globalEnv": ["NODE_VERSION", "GTK4_VERSION"],
    "tasks": {
        "lint": {
            "inputs": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx", "scripts/**/*.ts"],
            "outputs": []
        },
        "codegen": {
            "dependsOn": ["@gtkx/codegen#build"],
            "inputs": ["$TURBO_ROOT$/girs/**", "$TURBO_ROOT$/packages/gir/src/**"],
            "outputs": ["src/generated/**"]
        },
        "build": {
            "dependsOn": ["^build", "codegen", "native-build"],
            "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig.json", "tsconfig.app.json", "tsconfig.test.json"],
            "outputs": ["dist/**", "out-tsc/**", "build/**", "*.tsbuildinfo"]
        },
        "native-build": {
            "inputs": ["Cargo.toml", "Cargo.lock", "src/**/*.rs"],
            "outputs": ["index.node"]
        },
        "native-test": {
            "inputs": ["Cargo.toml", "src/**/*.rs"],
            "outputs": []
        },
        "start": {
            "dependsOn": ["build"],
            "persistent": true,
            "cache": false
        },
        "test": {
            "dependsOn": ["build", "native-test"],
            "inputs": [
                "src/**/*.ts",
                "src/**/*.tsx",
                "tests/**/*.ts",
                "tests/**/*.tsx",
                "$TURBO_ROOT$/vitest.config.ts",
                "$TURBO_ROOT$/vitest.setup.ts"
            ]
        },
        "@gtkx/config#build": {
            "dependsOn": ["^build"]
        },
        "@gtkx/gir#build": {
            "dependsOn": ["^build"]
        },
        "@gtkx/codegen#build": {
            "dependsOn": ["@gtkx/gir#build", "@gtkx/config#build"]
        },
        "website#build": {
            "dependsOn": ["@gtkx/config#build", "@gtkx/ffi#build", "@gtkx/react#build"],
            "outputs": ["build/**", ".docusaurus/**", "docs/api/**"]
        },
        "website#start": {
            "dependsOn": ["@gtkx/config#build", "@gtkx/ffi#build", "@gtkx/react#build"],
            "persistent": true,
            "cache": false
        }
    }
}
