{
    "name": "todo",
    "version": "0.0.0",
    "private": true,
    "description": "Todo app demonstrating GTKX with Adwaita integration",
    "type": "module",
    "gtkx": {
        "appId": "com.gtkx.todo"
    },
    "scripts": {
        "build": "tsc -b",
        "dev": "gtkx dev src/dev.tsx",
        "start": "node dist/index.js",
        "test": "GDK_BACKEND=x11 GSK_RENDERER=cairo LIBGL_ALWAYS_SOFTWARE=1 xvfb-run -a vitest run"
    },
    "dependencies": {
        "@gtkx/ffi": "workspace:*",
        "@gtkx/react": "workspace:*",
        "react": "^19"
    },
    "devDependencies": {
        "@gtkx/cli": "workspace:*",
        "@gtkx/testing": "workspace:*"
    }
}
