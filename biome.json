{
    "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
    "assist": {
        "enabled": true
    },
    "css": {
        "parser": {
            "cssModules": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineWidth": 120
    },
    "overrides": [
        {
            "includes": ["examples/**/*.css"],
            "linter": {
                "enabled": false
            },
            "formatter": {
                "enabled": false
            }
        }
    ],
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    }
}
